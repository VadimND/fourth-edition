<Window x:Class="SwordDamageWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SwordDamageWPF"
        mc:Ignorable="d"
        Title="Sword Damage" Height="175" Width="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <CheckBox x:Name="Flaming" Content="Flaming" HorizontalAlignment="Center" VerticalAlignment="Center" Unchecked="Flaming_Unchecked" Checked="Flaming_Checked" />
        <CheckBox x:Name="Magic" Content="Magic" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Unchecked="Magic_Unchecked" Checked="Magic_Checked" />
        <Button Content="Roll for damage" Grid.ColumnSpan="2" Margin="20,10" Grid.Row="1" Click="Button_Click" />
        <TextBlock x:Name="damage" TextWrapping="Wrap" Text="damage" Grid.ColumnSpan="2" Margin="75,53,75,0" Grid.RowSpan="2" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center"/>

    </Grid>
</Window>
